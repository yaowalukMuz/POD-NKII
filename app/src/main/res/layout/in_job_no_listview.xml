<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgIJNLBullet"
        android:layout_width="@dimen/text_h2"
        android:layout_height="@dimen/text_h2"
        app:srcCompat="@drawable/bullet" />

    <TextView
        android:id="@+id/txtIJNLInvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/InvoiceNo"
        android:textColor="@color/MediumBlue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtIJNLAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@color/MediumBlue"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>