<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/micro_margin"
    android:background="@drawable/layout_bg_notclick"
    android:gravity="right|end"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/txtILInvoice"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_weight="1"
        android:elevation="1dp"
        android:gravity="center_vertical"
        android:padding="@dimen/micro_margin"
        android:text="@string/Invoice"
        android:textColor="@color/MediumBlue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgILCamera"
        android:layout_width="@dimen/button_height"
        android:layout_height="@dimen/button_height"
        android:padding="@dimen/mini_margin"
        app:srcCompat="@drawable/camera" />
</LinearLayout>