<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="@color/LightSlateGrey" />
            <gradient android:angle="-90" android:startColor="@color/LightGrey" android:endColor="@color/Silver"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="@color/Silver" />
            <solid android:color="@color/LightSlateGrey"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="@color/LightSlateGrey" />
            <gradient android:angle="-90" android:startColor="@color/Silver" android:endColor="@color/LightGrey" />
        </shape>
    </item>
</selector>