<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="@color/CadetBlue" />
            <gradient android:angle="-90" android:startColor="@color/MediumAquaMarine" android:endColor="@color/MediumTurquoise"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="@color/MediumAquaMarine" />
            <solid android:color="@color/CadetBlue"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="@color/CadetBlue" />
            <gradient android:angle="-90" android:startColor="@color/MediumTurquoise" android:endColor="@color/MediumAquaMarine" />
        </shape>
    </item>
</selector>