<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>
    <!--<style name="CustomHoloDialog" parent="@android:style/Theme.Holo.Dialog">-->
    <!--<item name="android:background">@android:color/transparent</item>-->
    <!--</style>-->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:background">@color/Black</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
        <item name="android:textSize">@dimen/text_h3</item>
    </style>
    <!--Dialog Return-->
    <style name="ReturnAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:background">@color/DarkOliveGreen</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
        <item name="android:textSize">@dimen/text_h3</item>
    </style>

    <!--Dialog  Return List-->
    <style name="ReturnListAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:background">#182125</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
        <item name="android:textSize">@dimen/text_h3</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">

        <item name="android:textColor">@color/Crimson</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/ForestGreen</item>

    </style>

</resources>